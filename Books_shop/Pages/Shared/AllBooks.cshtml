@using Books_shop.Data.Models;
@model Book

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name" style="width:150px;" />
    <h3>@Model.name</h3>
    <p>@Model.shortDesc</p>
    <p>Ціна: @Model.price.ToString("c")</p>
    <p><a class="btn btn-warning" style="background-color: #E59AFF;" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.id">Додати до кошика</a></p>
</div>